{
    "name": "mock-test-kit-gateway",
    "version": "0.0.1",
    "description": "A Mock GraphQL Gateway",
    "author": "Joshua Nathaniel Miller <jmiller@rise8.us>",
    "private": true,
    "main": "app.js",
    "directories": {
        "test": "__tests__"
    },
    "scripts": {
        "dev": "fastify start -w -l info -P app.js -p ${PORT} -- --config `jq -Rrs '.| gsub(\"\\\\\\\\s+\"; \"\")' /tmp/gateway/config.json`",
        "start": "fastify start -l info app.js -p ${PORT} -- --config `jq -Rrs '.| gsub(\"\\\\\\\\s+\"; \"\")' /tmp/gateway/config.json`",
        "test": "jest --coverage"
    },
    "dependencies": {
        "fastify": "3.22.0",
        "fastify-cli": "2.13.0",
        "fastify-plugin": "3.0.0",
        "fastify-sensible": "3.1.1",
        "graphql": "15.6.1",
        "mercurius": "9.8.0"
    },
    "devDependencies": {
        "jest": "27.3.0",
        "tap": "15.0.10"
    }
}
